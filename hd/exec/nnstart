if [ `id -u` -ne 0 ] ; then
    echo "!!! ERROR !!! must be root... exit"
    exit 1
fi

if [ -z "$JAVA_HOME" ] ; then
    echo "!!! ERROR !!! JAVA_HOME not set... exit"
    exit 1
fi

HADOOP_PREFIX=/srv/hdfs
export HADOOP_PREFIX

HADOOP_CONF_DIR=$HADOOP_PREFIX/conf
export HADOOP_CONF_DIR

HADOOP_HDFS_HOME=$HADOOP_PREFIX
export HADOOP_HDFS_HOME

HADOOP_LOG_DIR=$HADOOP_PREFIX/logs
export HADOOP_LOG_DIR

HADOOP_PID_DIR=/tmp
export HADOOP_PID_DIR

HADOOP_HEAPSIZE=2000
export HADOOP_HEAPSIZE

$HADOOP_PREFIX/sbin/hadoop-daemon.sh --script hdfs start namenode || exit 1

exit 0
